<%= form_with model: blog do |form| %>
  <div class="form-group pb-2">
    <%= form.text_field :title, style: "width: 80%" %>
    <% blog.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-group pb-2">
    <%= form.text_area :body, rows: 30, style: "width: 80%" %>
    <% blog.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <%= form.text_field :photo, style: "width: 80%" %>
  </div>
  <%= form.submit :class => "btn btn-primary" %>
<% end %>
